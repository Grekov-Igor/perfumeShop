<Application x:Class="TradeExample.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TradeExample"
             StartupUri="View/Windows/Main.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="ColorSecondary" Color="#FFFFCC99"></SolidColorBrush>
        <SolidColorBrush x:Key="ColorAccent" Color="#FFCC6600"></SolidColorBrush>

        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ColorAccent}"/>
        </Style>

    </Application.Resources>
</Application>
